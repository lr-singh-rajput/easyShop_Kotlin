<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.updateTrancationCActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardloadingPrograssBarCTU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="100dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/loadingPrograssBarCTU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"

            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="update Trancation"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"

        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/datetimeUtc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="27dp"
                android:background="@drawable/box_bg"
                android:hint="date and time"
                android:inputType="text"
                android:focusable="false"
                android:padding="11dp"
                android:textColorHint="@color/palpal" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:text="Send"
                android:textColor="@color/black"
                android:textSize="19sp" />


            <EditText
                android:id="@+id/gaveUtc"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="27dp"

                android:layout_marginRight="27dp"
                android:background="@drawable/box_bg"
                android:hint="Send"
                android:inputType="number"
                android:padding="11dp"
                android:textColorHint="@color/palpal" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:text="Receive"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/gotUtc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:background="@drawable/box_bg"
                android:hint="Receive"
                android:inputType="number"
                android:padding="11dp"
                android:textColorHint="@color/palpal" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill NO."
                android:textSize="19sp"
                android:textColor="@color/black"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                />


            <EditText
                android:id="@+id/billnoUtc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:background="@drawable/box_bg"
                android:hint="bill No."
                android:inputType="number"
                android:padding="11dp"
                android:textColorHint="@color/palpal" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/detailUtc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="121dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:background="@drawable/box_bg"
                android:hint="item detail"
                android:inputType="text"
                android:padding="11dp"
                android:textColorHint="@color/palpal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="42dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancellbtnUtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/red"
                    android:padding="5dp"
                    android:text="Cencel" />

                <Button
                    android:id="@+id/updatebtnUtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/yello"
                    android:padding="5dp"
                    android:visibility="invisible"
                    android:text="Update" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>